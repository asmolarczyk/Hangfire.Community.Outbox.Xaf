<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.0.0</FileVersion>
        <PackageId>Hangfire.Community.Outbox.Xaf</PackageId>
        <Version>1.0.0</Version>
        <Authors>BredStik;asmolarczy</Authors>
		<RepositoryUrl>https://github.com/BredStik/Hangfire.Outbox</RepositoryUrl>
        <TargetFrameworks>net8.0</TargetFrameworks>
        <PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<Description>Outbox pattern implementation for Hangfire using XAF/XPO</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Hangfire.Core" Version="1.8.18" />
	    <PackageReference Include="DevExpress.Xpo" Version="24.2.6" />
        <PackageReference Include="DevExpress.ExpressApp" Version="24.2.6" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" Condition="'$(TargetFramework)' == 'net8.0'" />
    </ItemGroup>
    
    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" Version="8.0.0" Condition="'$(TargetFramework)' == 'net8.0'" />
    </ItemGroup>
    
    <ItemGroup>
        <None Include="..\..\LICENSE">
	        <Pack>True</Pack>
	        <PackagePath>\</PackagePath>
        </None>
      <None Include="..\..\README.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

</Project>
