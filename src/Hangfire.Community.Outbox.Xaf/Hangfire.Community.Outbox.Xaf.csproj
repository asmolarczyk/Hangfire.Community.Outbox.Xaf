<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyVersion>1.3.0</AssemblyVersion>
        <FileVersion>1.3.0</FileVersion>
        <PackageId>Hangfire.Community.Outbox.Xaf</PackageId>
        <Version>1.3.0</Version>
        <Authors>BredStik;asmolarczy</Authors>
		<RepositoryUrl>https://github.com/BredStik/Hangfire.Outbox</RepositoryUrl>
        <TargetFrameworks>net9.0</TargetFrameworks>
        <PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<Description>Outbox pattern implementation for Hangfire using XAF/XPO</Description>
		<NoWarn>$(NoWarn);NU5104</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Hangfire.Core" Version="1.8.20" />
	    <PackageReference Include="DevExpress.Xpo" Version="25.1.4" />
        <PackageReference Include="DevExpress.ExpressApp" Version="25.1.4" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.8" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <FrameworkReference Include="Microsoft.AspNetCore.App" Version="9.0.8" />
    </ItemGroup>
    
    <ItemGroup>
        <None Include="..\..\LICENSE">
	        <Pack>True</Pack>
	        <PackagePath>\</PackagePath>
        </None>
      <None Include="..\..\README.md">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

</Project>
